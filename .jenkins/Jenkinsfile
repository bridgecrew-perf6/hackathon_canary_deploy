library "jenkins-library"

pipeline {

  agent {
    kubernetes {
      label 'helmfile'
      yamlFile '.jenkins/sidecar.yaml'
      inheritFrom 'default'
    }
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '10'))
    skipDefaultCheckout true
  }
  
  stages {
    stage('deploy canary') {
        steps {
            node('helmfile') {
                container('helmfile') {
                script {
                    withAWS(role: getRole("infrastructure").role, roleAccount: getRole("infrastructure").roleAccount) {
                    script {
                        def cluster = getInfo.namespace('pce0')
                        sh "aws eks update-kubeconfig --name ${cluster.cluster} --region ${cluster.region}"
                        sh "kubectl get namespaces"
                        sh "kubectl get pods -n pce0"
                    }
                    }
                }
                }
            }
        }
    }
  }
}
